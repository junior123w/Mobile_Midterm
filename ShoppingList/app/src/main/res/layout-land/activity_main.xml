<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/listNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter the name of shopping list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listNameTextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/listNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shopping list"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TableLayout
        android:id="@+id/shoppingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.691"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listNameInput">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/itemNameInputOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:hint="@string/hint" />

            <Button
                android:id="@+id/minusItemOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttonColor"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/minus"
                android:textColor="@color/black"
                android:textSize="@dimen/itemTextSize"
                app:cornerRadius="@dimen/buttonCornerRadius" />

            <TextView
                android:id="@+id/quantityItemOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/mx_15"
                android:text="@string/itemQuantityDefault"
                android:textColor="@color/black"
                android:textSize="@dimen/quantityTextSize" />

            <Button
                android:id="@+id/plusItemOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttonColor"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/plus"
                android:textColor="@color/black"
                android:textSize="@dimen/itemTextSize"
                app:cornerRadius="@dimen/buttonCornerRadius" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/itemNameInputTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint="@string/hint" />

            <Button
                android:id="@+id/minusItemTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttonColor"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/minus"
                android:textColor="@color/black"
                android:textSize="@dimen/itemTextSize"
                app:cornerRadius="@dimen/buttonCornerRadius" />

            <TextView
                android:id="@+id/quantityItemTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/mx_15"
                android:text="@string/itemQuantityDefault"
                android:textColor="@color/black"
                android:textSize="@dimen/quantityTextSize" />

            <Button
                android:id="@+id/plusItemTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttonColor"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/plus"
                android:textColor="@color/black"
                android:textSize="@dimen/itemTextSize"
                app:cornerRadius="@dimen/buttonCornerRadius" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/itemNameInputThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint="@string/hint" />

            <Button
                android:id="@+id/minusItemThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttonColor"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/minus"
                android:textColor="@color/black"
                android:textSize="@dimen/itemTextSize"
                app:cornerRadius="@dimen/buttonCornerRadius" />

            <TextView
                android:id="@+id/quantityItemThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/mx_15"
                android:text="@string/itemQuantityDefault"
                android:textColor="@color/black"
                android:textSize="@dimen/quantityTextSize" />

            <Button
                android:id="@+id/plusItemThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttonColor"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/plus"
                android:textColor="@color/black"
                android:textSize="@dimen/itemTextSize"
                app:cornerRadius="@dimen/buttonCornerRadius" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/itemNameInputFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint="@string/hint" />

            <Button
                android:id="@+id/minusItemFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttonColor"
                android:text="@string/minus"
                android:textColor="@color/black"
                android:textSize="@dimen/itemTextSize"
                app:cornerRadius="@dimen/buttonCornerRadius" />

            <TextView
                android:id="@+id/quantityItemFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/mx_15"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/quantityTextSize" />

            <Button
                android:id="@+id/plusItemFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttonColor"
                android:text="@string/plus"
                android:textColor="@color/black"
                android:textSize="@dimen/itemTextSize"
                app:cornerRadius="@dimen/buttonCornerRadius" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/itemNameInputFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint="@string/hint" />

            <Button
                android:id="@+id/minusItemFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttonColor"
                android:text="@string/minus"
                android:textColor="@color/black"
                android:textSize="@dimen/itemTextSize"
                app:cornerRadius="@dimen/buttonCornerRadius" />

            <TextView
                android:id="@+id/quantityItemFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/mx_15"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/quantityTextSize" />

            <Button
                android:id="@+id/plusItemFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttonColor"
                android:text="@string/plus"
                android:textColor="@color/black"
                android:textSize="@dimen/itemTextSize"
                app:cornerRadius="@dimen/buttonCornerRadius" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="124dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/extraButtonColor"
        android:paddingStart="@dimen/p_15"
        android:paddingEnd="@dimen/p_15"
        android:text="@string/CancelButton"
        android:textColor="@color/black"
        android:textSize="@dimen/itemTextSize"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/shoppingLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveButton" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="114dp"
        android:layout_height="43dp"
        android:backgroundTint="@color/extraButtonColor"
        android:paddingStart="@dimen/p_15"
        android:paddingEnd="@dimen/p_15"
        android:text="@string/SaveButton"
        android:textColor="@color/black"
        android:textSize="@dimen/itemTextSize"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/shoppingLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listNameTextView"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>